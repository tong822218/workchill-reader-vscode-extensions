{
  "name": "workchill-vscode-extensions",
  "displayName": "workchill",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "workchill.selectBookFolder",
        "title": "Select Book Folder"
      },
      {
        "command": "workchill.showBook",
        "title": "Show Book Content"
      },
      {
        "command": "workchill.nextLine",
        "title": "Next Line"
      },
      {
        "command": "workchill.previousLine",
        "title": "Previous Line"
      },
      {
        "command": "workchill.clearContent",
        "title": "Clear Content"
      }
    ],
    "keybindings": [
      {
        "command": "workchill.showBook",
        "key": "cmd+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorTextFocus"
      },
      {
        "command": "workchill.clearContent",
        "key": "escape",
        "mac": "escape",
        "when": "editorTextFocus"
      },
      {
        "command": "workchill.nextLine",
        "key": "down",
        "mac": "down",
        "when": "editorTextFocus"
      },
      {
        "command": "workchill.previousLine",
        "key": "up",
        "mac": "up",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Workchill",
      "properties": {
        "workchill.bookFolder": {
          "type": "string",
          "default": "",
          "description": "书籍文件根目录"
        },
        "workchill.linesPerPage": {
          "type": "number",
          "default": 1,
          "description": "每次可读几行"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint . --config eslint.config.js",
    "pretest": "pnpm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "source-map-support": "^0.5.21"
  },
  "dependencies": {
    "cheerio": "^1.0.0",
    "epub2": "^3.0.2",
    "epubjs": "^0.3.93"
  }
}
