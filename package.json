{
  "name": "workchill-vscode-extensions",
  "displayName": "workchill",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "workchill.selectBookFolder",
        "title": "Select Book Folder"
      },
      {
        "command": "workchill.showBook",
        "title": "Show Book Content"
      },
      {
        "command": "workchill.nextLine",
        "title": "Next Line"
      },
      {
        "command": "workchill.previousLine",
        "title": "Previous Line"
      }
    ],
    "keybindings": [
      {
        "command": "workchill.showBook",
        "key": "cmd+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorTextFocus"
      },
      {
        "command": "workchill.nextLine",
        "key": "down",
        "mac": "down",
        "when": "editorTextFocus"
      },
      {
        "command": "workchill.previousLine",
        "key": "up",
        "mac": "up",
        "when": "editorTextFocus"
      },
      {
        "command": "workchill.clearContent",
        "key": "escape",
        "mac": "escape",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "lint": "eslint . --config eslint.config.js",
    "pretest": "pnpm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "source-map-support": "^0.5.21"
  },
  "dependencies": {
    "cheerio": "^1.0.0",
    "epub-parser": "^0.2.5",
    "epub2": "^3.0.2",
    "epubjs": "^0.3.93",
    "jsdom": "^25.0.1",
    "node-fetch": "^3.3.2",
    "xmlhttprequest": "^1.8.0"
  }
}
